{
  "name": "ROS 2 Humble Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/docker-ros-robot-arm",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/docker-ros-robot-arm,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "runArgs": [
    "--network=host",
    "--ipc=host",
    "--env=DISPLAY=host.docker.internal:0"
  ],
  "postCreateCommand": "rosdep install --from-paths src --ignore-src -r -y",
  "remoteUser": "root"
}
